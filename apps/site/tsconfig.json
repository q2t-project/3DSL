{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["astro/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.astro",
    ".astro/types.d.ts",
    "astro.config.mjs"
  ],
  "exclude": [
    "public/**",
    "dist/**",
    "node_modules/**",
    "scripts/**",
    "reports/**"
  ]
}
