---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const entries = await getCollection("policy");
  return entries
    .filter((e) => e.slug.toLowerCase() !== "readme")
    .map((entry) => ({ params: { slug: entry.slug }, props: { entry } }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const pageTitle = `${entry.data?.title ?? entry.slug} | Policy | 3DSL`;
const pageDescription = "Policy（SSOT: packages/docs/policy）";
---

<Layout title={pageTitle} description={pageDescription}>
  <nav class="text-sm text-neutral-400">
    <a href="/policy" class="hover:underline">Policy</a>
    <span class="mx-2">/</span>
    <span class="text-neutral-200">{entry.slug}</span>
  </nav>

  <article class="mt-6 prose prose-invert prose-neutral max-w-3xl font-content">
    <Content />
  </article>
</Layout>
