    <script is:inline>
    (() => {
      const iframe = document.getElementById("app-viewer-iframe");
      const titleEl = document.getElementById("app-viewer-title");
      const TITLE_PARAM = ${JSON.stringify(titleParam ?? "")};

      if (titleEl) {
        const t = String(TITLE_PARAM || "").trim();
        titleEl.textContent = t;
        if (t) document.title = `3DSL Viewer — ${t}`;
      }

  const progressEl = document.getElementById("app-viewer-progress");
  let progressFallbackTimer = 0;
  function showProgress() {
    if (!progressEl) return;
