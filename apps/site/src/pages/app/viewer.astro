---
// Fullscreen viewer host page (no site layout) to avoid flex/min-width/transform side effects.
const sp = new URLSearchParams(Astro.url.search);

// Defaults
if (!sp.has('embed')) sp.set('embed', '0');
if (!sp.has('mode')) sp.set('mode', 'prod');

// Pass through (model/profile/etc.) as-is.
const iframeSrc = `/viewer/index.html?${sp.toString()}`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>3DSL Viewer</title>
  </head>

  <body>
    <iframe
      id="app-viewer-iframe"
      class="app-viewer-iframe"
      src={iframeSrc}
      title="3DSL Viewer"
      allow="fullscreen"
      loading="eager"
      referrerpolicy="no-referrer"
    ></iframe>

    <button class="app-viewer-back" type="button" aria-label="戻る" onclick="history.back()">← 戻る</button>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #000;
  }

  /* iframe must always be viewport-bound (no flex/max-width side effects) */
  .app-viewer-iframe {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100dvh;
    border: 0;
    display: block;
    overflow: hidden;
    min-width: 0;
    min-height: 0;
    background: #000;
  }

  /* Minimal host chrome (doesn't affect iframe layout) */
  .app-viewer-back {
    position: fixed;
    top: calc(env(safe-area-inset-top) + 10px);
    left: calc(env(safe-area-inset-left) + 10px);
    z-index: 50;

    border: 1px solid rgba(255, 255, 255, 0.18);
    background: rgba(0, 0, 0, 0.55);
    color: #fff;
    border-radius: 999px;
    padding: 6px 10px;
    font: 13px/1.2 ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial;

    -webkit-backdrop-filter: blur(8px);
    backdrop-filter: blur(8px);
    cursor: pointer;
  }

  @media (hover: hover) and (pointer: fine) {
    .app-viewer-back:hover {
      background: rgba(0, 0, 0, 0.7);
    }
  }
</style>
