      let loadToastArmed = false;

      function armLoadToast(){ loadToastArmed = true; }
      function disarmLoadToast(){ loadToastArmed = false; }

      function stopProgressFallback(){
        if (progressFallbackTimer) {
          clearTimeout(progressFallbackTimer);
          progressFallbackTimer = 0;
        }
      }

      function startProgressFallback(){
        stopProgressFallback();
        // avoid sticky bar if iframe/runtime is broken
        progressFallbackTimer = setTimeout(() => {
          hideProgress();
          if (loadToastArmed) showToast('読み込みに時間がかかっています…');
          disarmLoadToast();
        }, 15000);
      }

      const backBtn = document.getElementById("app-viewer-back");
  const titleEl = document.getElementById("app-viewer-title");
  const setViewerTitle = (t) => {
    if (!titleEl) return;
    titleEl.textContent = t || "";
    if (t) document.title = `3DSL Viewer — ${t}`;
  };
  if (TITLE_PARAM) setViewerTitle(TITLE_PARAM);
      if (!iframe) return;

      const sp0 = new URLSearchParams(window.location.search);
      const back = sp0.get("back");
      const returnTo = sp0.get("return");
      const scrollRaw = sp0.get("scroll");

      let localLoaded = false;

      function buildInnerFromSearch(sp) {
        const inner = new URLSearchParams(sp);
        if (!inner.has("embed")) inner.set("embed", "0");
        if (!inner.has("mode")) inner.set("mode", "prod");

        // library bundle: enable snapshot-friendly WebGL options (iframe side)
        try {
          const from = inner.get('from') || '';
          const ret = inner.get('return') || inner.get('back') || '';
          if (from === 'library' || (ret && ret.startsWith('/library'))) {
            if (!inner.has('snap')) inner.set('snap', '1');
          }
        } catch {}

        // compat: legacy `open=`
        if (!inner.has("model") && inner.has("open")) {
          const v = inner.get("open");
          if (v) inner.set("model", v);
        }

        // host-only params (do not pass into iframe)
        inner.delete("back");
        inner.delete("return");
        inner.delete("scroll");
        // added by the site swipe preview iframe
        inner.delete("noads");
        inner.delete("swipe");
        return inner;
      }

      function updateIframeFromLocation() {
        const sp = new URLSearchParams(window.location.search);
        const inner = buildInnerFromSearch(sp);
        showProgress();
        startProgressFallback();
        iframe.src = `/viewer/index.html?${inner.toString()}`;
      }

      updateIframeFromLocation();

      if (iframe) {
        iframe.addEventListener("load", () => {
          // HTML load reached; keep progress until runtime reports (or fallback).
          startProgressFallback();
        });
      }

      window.addEventListener('message', (ev) => {
        try {
          if (ev.origin !== window.location.origin) return;
          const msg = ev.data;
          if (!msg || typeof msg !== 'object') return;
          const t = msg.type;
          if (t === '3dsl.viewer.hostReady') {
            stopProgressFallback();
            // initial boot: don't toast
            hideProgress();
            return;
          }
          if (t === '3dsl.viewer.loadStart') {
            showProgress();
            startProgressFallback();
            return;
          }
          if (t === '3dsl.viewer.loadOk') {
            stopProgressFallback();
            hideProgress();
            if (loadToastArmed) showToast('読み込みに成功しました');
            disarmLoadToast();
            return;
          }
          if (t === '3dsl.viewer.loadFail') {
            stopProgressFallback();
            hideProgress();
            const m = (typeof msg.message === 'string') ? msg.message : '';
            const shortMsg = m ? String(m).slice(0, 60) : '';
            if (loadToastArmed) showToast(shortMsg ? `読み込みに失敗しました: ${shortMsg}` : '読み込みに失敗しました');
            disarmLoadToast();
            return;
          }
        } catch {}
      });

      function sameOriginPath(urlLike) {
        const u = new URL(urlLike, window.location.origin);
        if (u.origin !== window.location.origin) return "";
        return `${u.pathname}${u.search}${u.hash}`;
      }

      function normalizeScroll(s) {
        const y = Number(s);
        if (!Number.isFinite(y) || y < 0) return "";
        return String(Math.floor(y));
      }

      const openBtn = document.getElementById("app-viewer-open");

      const shareBtn = document.getElementById("app-viewer-share");
      const copyBtn = document.getElementById("app-viewer-copy");
      const qrBtn = document.getElementById("app-viewer-qr");
      const snapBtn = document.getElementById("app-viewer-snap");


      const qrModal = document.getElementById("app-viewer-qr-modal");
      const qrImg = document.getElementById("app-viewer-qr-img");
      const qrUrl = document.getElementById("app-viewer-qr-url");
      const qrCopyBtn = document.getElementById("app-viewer-qr-copy");

      function isLibraryBundleMode() {
        try {
          const sp = new URLSearchParams(window.location.search || "");
          const from = sp.get('from') || '';
          const ret = sp.get('return') || sp.get('back') || '';
          if (from === 'library') return true;
          if (ret && ret.startsWith('/library')) return true;
          return false;
        } catch {
          return false;
        }
      }

      const _bundleMode = isLibraryBundleMode();
      // ページ種別でボタンセットを切り替える
      // - standalone /app/viewer: input (open) のみ
      // - library bundle mode: snapshot (camera) のみ
      if (openBtn) openBtn.style.display = _bundleMode ? 'none' : '';
      if (shareBtn) shareBtn.style.display = 'none';
      if (copyBtn) copyBtn.style.display = 'none';
      if (qrBtn) qrBtn.style.display = 'none';
      if (snapBtn) snapBtn.style.display = _bundleMode ? '' : 'none';


      const openModal = document.getElementById("app-viewer-open-modal");
      const openUrlInput = document.getElementById("app-viewer-open-url");
      const openUrlBtn = document.getElementById("app-viewer-open-url-btn");
      const openFileInput = document.getElementById("app-viewer-open-file");
      const openFileBtn = document.getElementById("app-viewer-open-file-btn");
      const openFileName = document.getElementById("app-viewer-open-file-name");
      const openDrop = document.getElementById("app-viewer-open-drop");

      const recentList = document.getElementById("app-viewer-open-recent-list");
      const recentClearBtn = document.getElementById("app-viewer-open-recent-clear");

      const dropOverlay = document.getElementById("app-viewer-drop-overlay");

      function showToast(msg) {
        let t = document.getElementById("app-viewer-toast");
        if (!t) {
          t = document.createElement("div");
          t.id = "app-viewer-toast";
          t.className = "app-viewer-toast";
          t.setAttribute('aria-live', 'polite');
          document.body.appendChild(t);
        }
        if (t.hasAttribute('hidden')) t.removeAttribute('hidden');
        t.textContent = msg;
        // ensure transition kicks in
        t.style.opacity = "0";
        t.style.transform = "translate(-50%, -10px)";
        requestAnimationFrame(() => {
          t.style.opacity = "1";
          t.style.transform = "translate(-50%, 0px)";
        });
        clearTimeout(showToast._t);
        showToast._t = setTimeout(() => {
          t.style.opacity = "0";
          t.style.transform = "translate(-50%, -10px)";
        }, 1600);
      }

      function currentShareUrl() {
        try {
          const sp = new URLSearchParams(window.location.search || '');
          const model = sp.get('model') || sp.get('open') || '';
          const mode = sp.get('mode') || '';
          const src = sp.get('src') || '';
          const q = new URLSearchParams();
          if (model) q.set('model', model);
          if (mode) q.set('mode', mode);
          if (src) q.set('src', src);
          const u = new URL('/app/viewer?' + q.toString(), window.location.origin);
          return u.toString();
        } catch {
          return window.location.href;
        }
      }


      // ---- snapshot (library bundle only) ----
      const _snapTitleCache = new Map();

      function normalizeTitle(raw) {
        if (!raw) return '';
        if (typeof raw === 'string') return raw.trim();
        if (typeof raw === 'object') {
          const ja = (typeof raw.ja === 'string') ? raw.ja.trim() : '';
          const en = (typeof raw.en === 'string') ? raw.en.trim() : '';
          return ja || en || '';
        }
        return '';
      }

      function filenameFromTitle(title) {
        const base = (title || '3dsl_snapshot').trim() || '3dsl_snapshot';
        const safe = base
          .replace(/[\/:*?"<>|]/g, '_')
          .replace(/\s+/g, ' ')
          .slice(0, 60)
          .trim() || '3dsl_snapshot';
        const d = new Date();
        const pad2 = (n) => String(n).padStart(2, '0');
        const stamp = `${d.getFullYear()}${pad2(d.getMonth()+1)}${pad2(d.getDate())}_${pad2(d.getHours())}${pad2(d.getMinutes())}${pad2(d.getSeconds())}`;
        return `${safe}_${stamp}.png`;
      }

      function ellipsizeText(ctx, text, maxWidth) {
        const t = String(text || '');
        if (!t) return '';
        if (ctx.measureText(t).width <= maxWidth) return t;
        const ell = '…';
        let lo = 0, hi = t.length;
        while (lo < hi) {
          const mid = Math.floor((lo + hi) / 2);
          const s = t.slice(0, mid) + ell;
          if (ctx.measureText(s).width <= maxWidth) lo = mid + 1;
          else hi = mid;
        }
        const cut = Math.max(0, lo - 1);
        return t.slice(0, cut) + ell;
      }

      function currentModelUrl() {
        try {
          const sp = new URLSearchParams(window.location.search || '');
          return (sp.get('model') || sp.get('open') || '').trim();
        } catch {
          return '';
        }
      }

      function currentDisplayUrlForSnapshot() {
        try {
          const sp = new URLSearchParams(window.location.search || '');
          const ret = (sp.get('return') || sp.get('back') || '').trim();
          if (ret && ret.startsWith('/library')) {
            return new URL(ret, window.location.origin).toString();
          }
        } catch {}
        return currentShareUrl();
      }

      async function fetchTitleFromModelUrl(modelUrl) {
        const key = String(modelUrl || '');
        if (!key) return '';
        if (_snapTitleCache.has(key)) return _snapTitleCache.get(key) || '';

        let title = '';
        try {
          const u = new URL(modelUrl, window.location.origin);
          const res = await fetch(u.toString(), { method: 'GET', credentials: 'omit', cache: 'force-cache' });
          if (!res.ok) throw new Error('fetch failed');
          const json = await res.json();
          title = normalizeTitle(json?.document_meta?.document_title)
            || normalizeTitle(json?.document_meta?.title)
            || normalizeTitle(json?.document_meta?.name)
            || '';
        } catch {}

        if (!title) {
          try {
            const u = new URL(modelUrl, window.location.origin);
            const p = (u.pathname || '').split('/').filter(Boolean);
            title = decodeURIComponent(p[p.length - 1] || '');
          } catch {}
        }

        _snapTitleCache.set(key, title);
        return title;
      }

      function getInnerViewerCanvas() {
        try {
          const w = iframe?.contentWindow;
          const d = iframe?.contentDocument || w?.document;
          if (!d) return null;
          return d.getElementById('viewer-canvas') || d.querySelector('canvas');
        } catch {
          return null;
        }
      }

      function canvasToBlob(canvas) {
        return new Promise((resolve) => {
          try {
            canvas.toBlob((b) => resolve(b || null), 'image/png');
          } catch {
            resolve(null);
          }
        });
      }

      function loadImage(url) {
        return new Promise((resolve, reject) => {
          const img = new Image();
          img.crossOrigin = 'anonymous';
          img.onload = () => resolve(img);
          img.onerror = (e) => reject(e);
          img.src = url;
        });
      }


      function postMessageToInner(payload) {
        try {
          const w = iframe?.contentWindow;
          if (!w) return false;
          w.postMessage(payload, window.location.origin);
          return true;
        } catch {
          return false;
        }
      }

      function requestInnerSnapshotBlob({ minDim = 2160, timeoutMs = 25000 } = {}) {
        return new Promise((resolve, reject) => {
          const id = `snap_${Date.now()}_${Math.random().toString(36).slice(2)}`;
          let done = false;

          const onMsg = (ev) => {
            try {
              if (ev.origin !== window.location.origin) return;
              const m = ev.data;
              if (!m || typeof m !== 'object') return;
              if (m.type !== '3dsl.viewer.snapshotResult') return;
              if (m.id !== id) return;

              done = true;
              window.removeEventListener('message', onMsg);
              clearTimeout(timer);

              if (m.ok && m.blob instanceof Blob) resolve(m.blob);
              else reject(new Error(m.message || 'snapshot failed'));
            } catch (e) {
              // ignore
            }
          };

          window.addEventListener('message', onMsg);

          const timer = setTimeout(() => {
            if (done) return;
            window.removeEventListener('message', onMsg);
            reject(new Error('snapshot timeout'));
          }, timeoutMs);

          const ok = postMessageToInner({ type: '3dsl.viewer.snapshotRequest', id, minDim: Number(minDim) || 2160 });
          if (!ok) {
            clearTimeout(timer);
            window.removeEventListener('message', onMsg);
            reject(new Error('postMessage failed'));
          }
        });
      }

      async function buildSnapshotPng({ title, url, notice }) {
        const srcCanvas = getInnerViewerCanvas();
        if (!srcCanvas) throw new Error('viewer canvas not found');

        let blob = null;
        try {
          blob = await requestInnerSnapshotBlob({ minDim: 2160, timeoutMs: 25000 });
        } catch {}

        // Guard: an unusually small capture often indicates a cleared/blank framebuffer.
        if (blob && typeof blob.size === 'number' && blob.size < 20000) blob = null;
        if (!blob) blob = await canvasToBlob(srcCanvas);
        if (blob && typeof blob.size === 'number' && blob.size < 20000) blob = null;
        if (!blob) throw new Error('capture failed');

        let shot = null;
        try {
          shot = await createImageBitmap(blob);
        } catch {
          // fallback: Image
          const dataUrl = URL.createObjectURL(blob);
          try {
            const img = await loadImage(dataUrl);
            shot = img;
          } finally {
            try { URL.revokeObjectURL(dataUrl); } catch {}
          }
        }

        const S = 1080; // square
        const out = document.createElement('canvas');
        out.width = S;
        out.height = S;
        const ctx = out.getContext('2d');
        if (!ctx) throw new Error('2d context not available');

        try {
          ctx.imageSmoothingEnabled = true;
          ctx.imageSmoothingQuality = 'high';
        } catch {}

        // draw screenshot (center-crop to square)
        const sw = shot.width || shot.naturalWidth || 0;
        const sh = shot.height || shot.naturalHeight || 0;
        const crop = Math.max(1, Math.min(sw, sh));
        const sx = Math.max(0, Math.floor((sw - crop) / 2));
        const sy = Math.max(0, Math.floor((sh - crop) / 2));
        ctx.drawImage(shot, sx, sy, crop, crop, 0, 0, S, S);

        const pad = 44;
        const boxPad = 14;
        const maxW = Math.floor(S * 0.58);

        // right-top: title + url
        const titleText = (title || '').trim();
        const urlText = (url || '').trim();

        let titleSize = 46;
        ctx.font = `700 ${titleSize}px system-ui, -apple-system, Segoe UI, sans-serif`;
        while (titleSize > 18 && ctx.measureText(titleText).width > maxW) {
          titleSize -= 2;
          ctx.font = `700 ${titleSize}px system-ui, -apple-system, Segoe UI, sans-serif`;
        }

        const urlSize = 20;
        const urlFont = `500 ${urlSize}px system-ui, -apple-system, Segoe UI, sans-serif`;
        ctx.font = urlFont;
        const urlDisplay = ellipsizeText(ctx, urlText, maxW);

        const lineGap = 8;
        const topH = (titleText ? (titleSize * 1.15) : 0) + (urlDisplay ? (urlSize * 1.25) : 0) + (titleText && urlDisplay ? lineGap : 0);
        const topW = Math.min(maxW, Math.max(
          titleText ? ctx.measureText(titleText).width : 0,
          urlDisplay ? ctx.measureText(urlDisplay).width : 0,
        ));

        if (topH > 0) {
          const bw = Math.ceil(topW + boxPad * 2);
          const bh = Math.ceil(topH + boxPad * 2);
          const bx = S - pad - bw;
          const by = pad;
          ctx.fillStyle = 'rgba(0,0,0,0.45)';
          ctx.fillRect(bx, by, bw, bh);

          let tx = S - pad - boxPad;
          let ty = by + boxPad;

          if (titleText) {
            ctx.fillStyle = 'rgba(255,255,255,0.98)';
            ctx.font = `700 ${titleSize}px system-ui, -apple-system, Segoe UI, sans-serif`;
            ctx.textAlign = 'right';
            ctx.textBaseline = 'top';
            ctx.fillText(titleText, tx, ty);
            ty += titleSize * 1.15;
            if (urlDisplay) ty += lineGap;
          }
          if (urlDisplay) {
            ctx.fillStyle = 'rgba(255,255,255,0.92)';
            ctx.font = urlFont;
            ctx.textAlign = 'right';
            ctx.textBaseline = 'top';
            ctx.fillText(urlDisplay, tx, ty);
          }
        }

        // right-bottom: notice (1 line)
        const noticeText = (notice || '').trim();
        const noticeSize = 20;
        ctx.font = `500 ${noticeSize}px system-ui, -apple-system, Segoe UI, sans-serif`;
        const noticeDisplay = ellipsizeText(ctx, noticeText, maxW);
        if (noticeDisplay) {
          const bw = Math.ceil(ctx.measureText(noticeDisplay).width + boxPad * 2);
          const bh = Math.ceil(noticeSize * 1.35 + boxPad * 2);
          const bx = S - pad - bw;
          const by = S - pad - bh;
          ctx.fillStyle = 'rgba(0,0,0,0.45)';
          ctx.fillRect(bx, by, bw, bh);
          ctx.fillStyle = 'rgba(255,255,255,0.92)';
          ctx.textAlign = 'right';
          ctx.textBaseline = 'top';
          ctx.fillText(noticeDisplay, S - pad - boxPad, by + boxPad);
        }

        // left-bottom: 3dsl logo
        try {
          const logo = await loadImage('/assets/logo/3DSL.svg');
          const l0w = Number(logo.naturalWidth || logo.width || 310);
          const l0h = Number(logo.naturalHeight || logo.height || 160);
          const maxLogoW = 180;
          const maxLogoH = 56;
          const s = Math.max(0.01, Math.min(maxLogoW / l0w, maxLogoH / l0h));
          const lw = Math.max(1, Math.round(l0w * s));
          const lh = Math.max(1, Math.round(l0h * s));
          const bx = pad;
          const by = S - pad - lh;
          ctx.fillStyle = 'rgba(0,0,0,0.35)';
          ctx.fillRect(bx - 10, by - 8, lw + 20, lh + 16);
          ctx.drawImage(logo, bx, by, lw, lh);
        } catch {}

        const outBlob = await new Promise((resolve) => {
          out.toBlob((b) => resolve(b || null), 'image/png');
        });
        if (!outBlob) throw new Error('encode failed');
        return outBlob;
      }

      async function downloadBlob(blob, filename) {
