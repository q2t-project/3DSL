<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Compare | 3DSL</title>
    <meta name="description" content="Viewer と Modeler の表示・座標系・数値オーバーレイ整合を確認するための比較ページ（/app/compare）" />
  </head>
  <body>
    <header class="top">
      <div class="row">
        <div class="title">Compare</div>
        <label class="lbl">
          <span>model</span>
          <input id="modelUrl" type="text" spellcheck="false" />
        </label>
        <button id="reloadBtn" class="btn">Reload</button>
        <button id="snapBtn" class="btn">Snapshot</button>
      </div>
      <div class="hint">
        Default: golden fixture (repo) — Viewer: /viewer/peek.html, Modeler: /modeler_app/index.html
      </div>
    </header>

    <main class="grid">
      <section class="pane">
        <div class="paneHead">Viewer (peek)</div>
        <iframe id="viewerFrame" class="frame" title="Viewer Peek"></iframe>
      </section>

      <section class="pane">
        <div class="paneHead">Modeler</div>
        <iframe id="modelerFrame" class="frame" title="Modeler"></iframe>
      </section>

      <aside class="side">
        <div class="paneHead">Debug snapshots</div>
        <pre id="out" class="out"></pre>
      </aside>
    </main>

    <script>
      (() => {
        const DEFAULT_MODEL = "/3dss/fixtures/regression/valid_golden_minimal_viewer_modeler.3dss.json";
        const GOLDEN_UUIDS = [
          "11111111-1111-4111-8111-111111111111",
          "22222222-2222-4222-8222-222222222222",
          "33333333-3333-4333-8333-333333333333",
          "cccccccc-cccc-4ccc-8ccc-cccccccccccc"
        ];

        const modelUrlEl = document.getElementById("modelUrl");
        const viewerFrame = document.getElementById("viewerFrame");
        const modelerFrame = document.getElementById("modelerFrame");
        const outEl = document.getElementById("out");

        function getModelUrl() {
          const u = new URL(window.location.href);
          const q = u.searchParams.get("model");
          return (q && q.trim()) ? q.trim() : DEFAULT_MODEL;
        }

        function setModelUrl(v) {
          try {
            const u = new URL(window.location.href);
            u.searchParams.set("model", v);
            history.replaceState(null, "", u.toString());
          } catch (_e) {}
        }

        function buildViewerSrc(modelUrl) {
          const u = new URL(window.location.origin + "/viewer/peek.html");
          u.searchParams.set("model", modelUrl);
          u.searchParams.set("debugPose", "1");
          return u.pathname + u.search + u.hash;
        }

        function buildModelerSrc(modelUrl) {
          const u = new URL(window.location.origin + "/modeler_app/index.html");
          u.searchParams.set("model", modelUrl);
          u.searchParams.set("debugPose", "1");
          return u.pathname + u.search + u.hash;
        }

        function reloadFrames() {
          const modelUrl = modelUrlEl.value.trim() || DEFAULT_MODEL;
          setModelUrl(modelUrl);
          viewerFrame.src = buildViewerSrc(modelUrl);
          modelerFrame.src = buildModelerSrc(modelUrl);
          outEl.textContent = "";
        }

        function pretty(obj) {
          try { return JSON.stringify(obj, null, 2); } catch (_e) { return String(obj); }
        }

        const pending = new Map();
        window.addEventListener("message", (ev) => {
          const data = ev?.data;
          if (!data || typeof data !== "object") return;
          if (data.type !== "3DSL_DEBUG_POSE") return;
          const id = data.requestId;
          const p = pending.get(id);
          if (!p) return;
          pending.delete(id);
          p.resolve({ snapshot: data.snapshot });
        });

        function requestSnapshot(frameWin, uuids) {
          const requestId = `req_${Math.random().toString(16).slice(2)}_${Date.now()}`;
          const payload = { type: "3DSL_GET_DEBUG_POSE", requestId, uuids };
          return new Promise((resolve) => {
            pending.set(requestId, { resolve });
            try { frameWin.postMessage(payload, "*"); } catch (_e) { resolve({ snapshot: null }); }
            setTimeout(() => {
              if (!pending.has(requestId)) return;
              pending.delete(requestId);
              resolve({ snapshot: null });
            }, 1200);
          });
        }

        async function snapshotBoth() {
          const vWin = viewerFrame.contentWindow;
          const mWin = modelerFrame.contentWindow;
          const uuids = GOLDEN_UUIDS;

          const [v, m] = await Promise.all([
            requestSnapshot(vWin, uuids),
            requestSnapshot(mWin, uuids)
          ]);

          const res = {
            model: modelUrlEl.value.trim() || DEFAULT_MODEL,
            viewer: v.snapshot,
            modeler: m.snapshot
          };
          outEl.textContent = pretty(res);
        }

        // init
        modelUrlEl.value = getModelUrl();
        reloadFrames();

        document.getElementById("reloadBtn").addEventListener("click", reloadFrames);
        document.getElementById("snapBtn").addEventListener("click", snapshotBoth);

        modelUrlEl.addEventListener("keydown", (e) => {
          if (e.key === "Enter") reloadFrames();
        });
      })();
    </script>

    <style>
      :root {
        --bg: #0b0b0d;
        --panel: #0f1116;
        --border: rgba(255,255,255,0.12);
        --text: rgba(255,255,255,0.88);
        --muted: rgba(255,255,255,0.6);
      }

      html, body { height: 100%; margin: 0; background: var(--bg); color: var(--text); font: 13px/1.4 system-ui, -apple-system, Segoe UI, sans-serif; }
      .top { padding: 10px 12px; border-bottom: 1px solid var(--border); background: rgba(0,0,0,0.25); position: sticky; top: 0; z-index: 10; }
      .row { display: flex; gap: 10px; align-items: center; flex-wrap: wrap; }
      .title { font-weight: 700; letter-spacing: 0.2px; }
      .lbl { display: inline-flex; align-items: center; gap: 8px; }
      .lbl span { color: var(--muted); }
      input[type="text"] {
        width: min(78vw, 840px);
        padding: 6px 8px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.04);
        color: var(--text);
        outline: none;
      }
      .btn {
        padding: 6px 10px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.06);
        color: var(--text);
        cursor: pointer;
      }
      .btn:hover { background: rgba(255,255,255,0.09); }
      .hint { margin-top: 6px; color: var(--muted); }

      .grid {
        height: calc(100% - 68px);
        display: grid;
        grid-template-columns: 1fr 1fr minmax(320px, 520px);
        grid-template-rows: 1fr;
      }
      .pane, .side {
        border-right: 1px solid var(--border);
        min-width: 0;
      }
      .side { border-right: 0; }
      .paneHead {
        padding: 8px 10px;
        border-bottom: 1px solid var(--border);
        background: var(--panel);
        color: var(--muted);
      }
      .frame {
        width: 100%;
        height: calc(100% - 33px);
        border: 0;
        display: block;
        background: #0b0b0d;
      }
      .out {
        margin: 0;
        padding: 10px;
        white-space: pre;
        overflow: auto;
        height: calc(100% - 33px);
      }

      @media (max-width: 1100px) {
        .grid { grid-template-columns: 1fr; grid-template-rows: 1fr 1fr 420px; }
        .pane, .side { border-right: 0; border-bottom: 1px solid var(--border); }
        .side { border-bottom: 0; }
        .frame { height: calc(100% - 33px); }
      }
    </style>
  </body>
</html>
