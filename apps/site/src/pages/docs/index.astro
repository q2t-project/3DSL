---
import Layout from "../../layouts/Layout.astro";
import DocsText from "../../content/text/docs.md";
import AdSlot from "../../components/AdSlot.astro";
import { ADSENSE_SLOTS } from "../../lib/adsense";

// ※ ここは “実在パス” に合わせて調整してください。
// いまのプランでは /3dss/3dss/release/... を想定してる。
const links = [
  { label: "Latest schema", href: "/3dss/3dss/release/3DSS.schema.json" },
  { label: "v1.1.1 schema", href: "/3dss/3dss/release/v1.1.1/3DSS.schema.json" },
  { label: "v1.1.1 spec", href: "/3dss/3dss/release/v1.1.1/3DSS_spec.md" },
  { label: "Viewer docs", href: "/viewer/3DSD-viewer.md" },
];
---

<Layout
  title="Docs | 3DSL"
  description="3DSL の考え方、用語、設計のハブ。図の自由度問題、発散と収束、引用と表現の方針などをまとめます。"
>
  <div class="prose prose-invert prose-neutral max-w-3xl">
    <DocsText />
  </div>

  <div class="mt-8 max-w-3xl">
    <AdSlot
      slot={ADSENSE_SLOTS.docs_inline}
      className="rounded-2xl border border-white/10 bg-white/5 min-h-[120px]"
    />
  </div>

  <div class="mt-10 grid gap-3">
    {links.map((x) => (
      <a class="rounded-2xl border border-white/10 bg-white/5 p-4 hover:bg-white/10" href={x.href}>
        <div class="text-sm font-medium">{x.label}</div>
        <div class="mt-1 font-mono text-xs text-neutral-400">{x.href}</div>
      </a>
    ))}
  </div>
</Layout>
