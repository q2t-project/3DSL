---
import Layout from "../../../layouts/Layout.astro";

import schemaRaw from "../../../content/docs_integrated/3DSS.schema.v1.1.4.json?raw";

let schemaPretty = schemaRaw;
try {
  schemaPretty = JSON.stringify(JSON.parse(schemaRaw), null, 2);
} catch {
  // keep raw
}
---

<Layout
  title="v1.1.4 schema | Docs | 3DSL"
  description="3DSS.schema.json (v1.1.4) を /docs 配下で表示します。"
>
  <div class="prose prose-invert prose-neutral max-w-4xl">
    <h1>v1.1.4 schema</h1>
    <p>
      参照用の表示ページ。生ファイルは
      <a href="/schemas/release/v1.1.4/3DSS.schema.json">/schemas/release/v1.1.4/3DSS.schema.json</a>
      。
    </p>
  </div>

  <div class="mt-6 max-w-4xl rounded-2xl border border-white/10 bg-black/30 p-4">
    <pre class="overflow-auto text-xs leading-relaxed"><code>{schemaPretty}</code></pre>
  </div>
</Layout>
