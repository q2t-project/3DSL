---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const faqs = (await getCollection("faq")).sort((a, b) => a.slug.localeCompare(b.slug, "ja"));

const title = "FAQ | 3DSL";
const description = "よくある質問。SSOT: packages/docs/faq";
---

<Layout title={title} description={description}>
  <h1 class="text-2xl font-medium tracking-tight">FAQ</h1>
  <p class="mt-2 text-neutral-300 max-w-3xl">
    短い回答を揃えていく。詳細は Docs / Concept / Library へ誘導する。
  </p>

  {faqs.length ? (
    <ul class="mt-6 grid gap-3 max-w-3xl">
      {faqs.map((e) => (
        <li class="rounded-2xl border border-white/10 bg-white/5 p-4 hover:bg-white/10">
          <a class="font-medium hover:underline" href={`/faq/${e.slug}`}>{e.data?.title ?? e.slug}</a>
          <div class="mt-1 font-mono text-xs text-neutral-400">/faq/{e.slug}</div>
        </li>
      ))}
    </ul>
  ) : (
    <p class="mt-6 text-sm text-neutral-400">FAQ がまだありません。</p>
  )}
</Layout>
