---
import "../styles/global.css";

const { title = "3DSL" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>

  <!-- app screen: fixed viewport, no page scroll -->
  <body class="h-[100dvh] overflow-hidden bg-neutral-950 text-neutral-100">
    <slot />
  </body>
</html>
