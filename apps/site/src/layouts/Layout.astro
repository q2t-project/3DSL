---
import "../styles/global.css";
import { ADSENSE_PUBLISHER_ID, shouldEnableAdsense, isNoAdsRequest } from "../lib/adsense";

const {
  title = "3DSL",
  description = "3DSL は、概念や関係を三次元の座標に配置し、拡大縮小しながら局面と総体を行き来できる表現基盤です。",
  canonical = null,
  canonicalUrl = null,
  jsonLd = null,
  ogImage = null,
  ogType = "website",
  twitterCard = "summary",
} = Astro.props;
const pathname = Astro.url?.pathname ?? "/";
const isHome = pathname === "/";
const noAds = isNoAdsRequest(Astro.url);
const canonicalFinal = canonicalUrl ?? canonical;

// AdSense
// - Central policy: ads only on /, /concept (see lib/adsense.ts)
// For review/verification stability, always load the AdSense script on normal page views.
// (Ad slots themselves remain gated by shouldEnableAdsense.)
const includeAdsenseScript = !noAds;
const enableAdsense = !noAds && shouldEnableAdsense(pathname);

// Header nav: keep it minimal (no hamburger)
const nav = [
  { href: "/", label: "Home" },
  { href: "/library", label: "Library" },
  { href: "/app/viewer", label: "Viewer" },
  { href: "/docs", label: "Docs" },
  { href: "/concept", label: "Concept" },
];
function isActive(href: string) {
  return href === "/" ? pathname === "/" : pathname.startsWith(href);
}
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

	    <script is:inline>
	      // Prevent browser/SPA-like scroll restoration from leaving pages "already scrolled" on navigation.
	      try {
	        if ("scrollRestoration" in history) history.scrollRestoration = "manual";
	      } catch {}
	    </script>

    {includeAdsenseScript && (
      <meta name="google-adsense-account" content={ADSENSE_PUBLISHER_ID} />
    )}

    {includeAdsenseScript && (
      <script
        async
        src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${ADSENSE_PUBLISHER_ID}`}
        crossorigin="anonymous"
      ></script>
    )}

    <!-- Fonts: readable, business-like UI (JP + Latin) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300..600&display=swap"
    />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalFinal && <link rel="canonical" href={canonicalFinal} />}

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <meta property="og:type" content={ogType} />
    <meta name="twitter:card" content={twitterCard} />
    {jsonLd && (
      <script
        type="application/ld+json"
        set:html={typeof jsonLd === "string" ? jsonLd : JSON.stringify(jsonLd)}
      />
    )}
    <slot name="head" />
  </head>

  <body class={`min-h-screen text-neutral-100 antialiased${isHome ? " is-home" : ""}`}>
  <div id="page-progress" class="ui-page-progress" aria-hidden="true" data-on="1">
    <div class="ui-page-progress-bar"></div>
  </div>
    <div id="app-shell" class="min-h-screen text-neutral-100 antialiased app-shell">
    <header class="sticky top-0 z-50 border-b border-white/10 bg-neutral-950/60 backdrop-blur">
    <div class="mx-auto max-w-6xl px-4 py-2">
      <div class="ui-headerbar flex items-start gap-3">
          <a href="/" class="flex items-center shrink-0" aria-label="3DSL Home">
            <!-- Keep logo size stable even if utility CSS is missing -->
            <img
              src="/assets/logo/3DSL.svg"
              alt="3DSL"
              class="ui-brand-logo"
              width="105"
              height="54"
              loading="eager"
              decoding="async"
            />
          </a>

          <nav class="ui-navbar ui-navbar--mecha" aria-label="Primary">
            {nav.map((i) => (
              <a
                href={i.href}
                class={
                  "ui-navlink " + (isActive(i.href) ? "ui-navlink--active" : "")
                }
                aria-label={i.label}
              >
                {i.label}
              </a>
            ))}
          </nav>
        </div>
      </div>
    </header>

    <main class="mx-auto w-full max-w-6xl px-4 py-10">
      <slot />
    </main>

    <footer class="border-t border-white/10 bg-neutral-950/40">
      <div class="mx-auto max-w-6xl px-4 py-8 text-xs text-neutral-400">
        <div class="flex items-center justify-between gap-3">
          <div>3DSL</div>
          <div class="ui-footer-links">
            <a class="hover:text-neutral-200" href="/policy">Policy</a>
            <a class="hover:text-neutral-200" href="/contact">Contact</a>
            <a class="hover:text-neutral-200" href="/docs">Docs</a>
            <a class="hover:text-neutral-200" href="/faq">FAQ</a>
            <a class="hover:text-neutral-200" href="/library">Library</a>
            <a class="hover:text-neutral-200" href="/app/viewer">Viewer</a>
          </div>
        </div>
      </div>
    </footer>
    </div>

    <!-- swipe stage (behind app-shell) -->
    <div id="swipe-stage" aria-hidden="true"></div>

    <!-- Mobile: horizontal swipe to navigate main pages (Home/Library/Viewer/Concept/Contact)
         - drag follows finger
         - next page is shown as a blurred iframe behind (preview only)
    -->
    <script is:inline>
      (() => {
        const el = document.getElementById("page-progress");
        if (!el) return;
        const show = () => el.setAttribute("data-on", "1");
        const hide = () => el.removeAttribute("data-on");

        // initial load (also handles bfcache)
        window.addEventListener("load", () => setTimeout(hide, 120), { once: true });
        window.addEventListener("pageshow", () => setTimeout(hide, 50));

        // show on same-origin navigations
        document.addEventListener(
          "click",
          (ev) => {
            const t = ev.target;
            if (!(t instanceof Element)) return;
            const a = t.closest("a[href]");
            if (!(a instanceof HTMLAnchorElement)) return;
            if (a.target && a.target !== "_self") return;
            if (a.hasAttribute("download")) return;
            if (ev.metaKey || ev.ctrlKey || ev.shiftKey || ev.altKey) return;

            const href = a.getAttribute("href") || "";
            if (!href || href.startsWith("#")) return;

            try {
              const u = new URL(a.href);
              if (u.origin !== location.origin) return;
              show();
            } catch {}
          },
          true
        );

        // allow other scripts to toggle
        window.__3dslProgress = { show, hide };
      })();
    </script>

    <script is:inline>
      // Scroll position control (important when using ViewTransitions / client-side navigation).
      // Otherwise, the next page can inherit the previous page's scrollY.
      (() => {
        const shouldKeepScroll = () => {
          // hash navigation should keep the browser's default behavior
          if (location.hash && location.hash !== "#") return true;
          // explicit restore handler (e.g. /library?scroll=123)
          try {
            const sp = new URLSearchParams(location.search || "");
            if (sp.has("scroll")) return true;
          } catch {}
          return false;
        };

        const forceTop = () => {
          if (shouldKeepScroll()) return;
          // set all common scroll roots to be safe
          window.scrollTo(0, 0);
          document.documentElement.scrollTop = 0;
          document.body.scrollTop = 0;
        };

        try {
          if ("scrollRestoration" in history) history.scrollRestoration = "manual";
        } catch {}

        // initial load and after client-side navigations
        const onPage = () => {
          forceTop();
          requestAnimationFrame(forceTop);
          setTimeout(forceTop, 50);
        };

        window.addEventListener("load", onPage);
        document.addEventListener("astro:page-load", onPage);
        document.addEventListener("astro:after-swap", onPage);
      })();
    </script>

    <script is:inline>
      (() => {
        try {
          const sp = new URLSearchParams(location.search || "");
          if (sp.get("swipe") === "1") return;

          const ROUTES = ["/", "/library", "/app/viewer", "/concept", "/contact"];
          const path = location.pathname || "/";
          const getIndex = () => {
            for (let i = 0; i < ROUTES.length; i++) {
              const r = ROUTES[i];
              if (r === "/" ? path === "/" : path.startsWith(r)) return i;
            }
            return -1;
          };

          const withNoAds = (url) => {
            try {
              const u = new URL(url, location.origin);
              u.searchParams.set("noads", "1");
              u.searchParams.set("swipe", "1");
              return u.pathname + u.search + u.hash;
            } catch (_e) {
              return url + (url.includes("?") ? "&" : "?") + "noads=1&swipe=1";
            }
          };


          // enable only on these 5 public pages
          if (getIndex() < 0) return;

          const app = document.getElementById("app-shell");
          const stage = document.getElementById("swipe-stage");
          if (!app || !stage) return;

          const isInteractive = (el) => {
            if (!el) return false;
            const tag = (el.tagName || "").toLowerCase();
            if (tag === "input" || tag === "textarea" || tag === "select" || tag === "button") return true;
            // avoid fighting with embedded viewers / canvases
            if (tag === "iframe" || tag === "canvas") return true;
            if (el.isContentEditable) return true;
            return !!el.closest?.("[data-swipe-ignore]");
          };

          // config
          const LOCK_X = 12; // start considering horizontal
          const LOCK_BIAS = 6; // |dx| > |dy| + bias => lock
          const COMMIT_X = 0.22; // 22% of viewport width => commit
          const MAX_DT = 800;
          const DRAG_RESIST = 0.92;
          const BLUR_PX = 2.5;

          let startX = 0,
            startY = 0,
            t0 = 0;
          let dragging = false;
          let locked = false;
          let dir = 0; // -1 prev (right), +1 next (left)
          let target = "";
          let iframe = null;

          const vw = () => Math.max(1, window.innerWidth || document.documentElement.clientWidth || 1);

          const resetStage = () => {
            stage.innerHTML = "";
            stage.style.display = "none";
            iframe = null;
          };

          const setupStage = (url, d) => {
            stage.style.display = "block";
            stage.innerHTML = "";

            const f = document.createElement("iframe");
            f.src = url;
            f.setAttribute("loading", "eager");
            f.setAttribute("tabindex", "-1");
            f.setAttribute("aria-hidden", "true");
            f.style.position = "absolute";
            f.style.inset = "0";
            f.style.width = "100%";
            f.style.height = "100%";
            f.style.border = "0";
            f.style.pointerEvents = "none";
            f.style.filter = `blur(${BLUR_PX}px)`;
            f.style.opacity = "0.95";
            f.style.transform = `translate3d(${d === 1 ? 100 : -100}%,0,0)`;
            f.style.willChange = "transform";
            stage.appendChild(f);
            iframe = f;
          };

          const setDrag = (dx) => {
            const w = vw();
            const x = Math.max(-w, Math.min(w, dx)) * DRAG_RESIST;
            app.style.transition = "none";
            app.style.transform = `translate3d(${x}px,0,0)`;
            if (iframe) {
              iframe.style.transition = "none";
              iframe.style.transform = `translate3d(${dir === 1 ? 100 : -100}%,0,0) translate3d(${x}px,0,0)`;
            }
          };

          const animateTo = (xPx, onDone) => {
            const w = vw();
            const dur = 120;
            app.style.transition = `transform ${dur}ms ease`;
            app.style.transform = `translate3d(${xPx}px,0,0)`;

            if (iframe) {
              iframe.style.transition = `transform ${dur}ms ease, filter ${dur}ms ease, opacity ${dur}ms ease`;
              if (xPx === 0) {
                iframe.style.transform = `translate3d(${dir === 1 ? 100 : -100}%,0,0)`;
                iframe.style.filter = `blur(${BLUR_PX}px)`;
                iframe.style.opacity = "0.95";
              } else {
                // slide complete: show preview sharply for a moment
                iframe.style.transform = "translate3d(0,0,0)";
                iframe.style.filter = "blur(0px)";
                iframe.style.opacity = "1";
              }
            }

            const done = () => {
              app.removeEventListener("transitionend", done);
              onDone?.();
            };
            app.addEventListener("transitionend", done);
          };

          window.addEventListener(
            "touchstart",
            (e) => {
              if (!e || e.touches.length !== 1) return;
              if (isInteractive(e.target)) return;
              if (getIndex() < 0) return;
              const t = e.touches[0];
              startX = t.clientX;
              startY = t.clientY;
              t0 = Date.now();
              dragging = true;
              locked = false;
              dir = 0;
              target = "";
              resetStage();
            },
            { passive: true }
          );

          window.addEventListener(
            "touchmove",
            (e) => {
              if (!dragging) return;
              if (!e || e.touches.length !== 1) return;
              const dt = Date.now() - t0;
              if (dt > MAX_DT) {
                dragging = false;
                return;
              }

              const t = e.touches[0];
              const dx = t.clientX - startX;
              const dy = t.clientY - startY;

              if (!locked) {
                if (Math.abs(dx) < LOCK_X) return;
                if (Math.abs(dx) <= Math.abs(dy) + LOCK_BIAS) return;

                // lock horizontal
                locked = true;
                e.preventDefault();

                const idx = getIndex();
                if (idx < 0) {
                  dragging = false;
                  locked = false;
                  return;
                }
                dir = dx < 0 ? 1 : -1;
                const next = idx + dir;
                if (next < 0 || next >= ROUTES.length) {
                  dragging = false;
                  locked = false;
                  return;
                }
                target = ROUTES[next];
                setupStage(withNoAds(target), dir);
              } else {
                e.preventDefault();
              }

              if (locked) setDrag(dx);
            },
            { passive: false }
          );

          window.addEventListener(
            "touchend",
            (e) => {
              if (!dragging) return;
              dragging = false;
              if (!locked) return;

              const c = e.changedTouches && e.changedTouches[0];
              if (!c) {
                animateTo(0, () => {
                  app.style.transform = "";
                  resetStage();
                });
                return;
              }
              const dx = c.clientX - startX;
              const w = vw();
              const ratio = Math.abs(dx) / w;

              if (ratio >= COMMIT_X && target) {
                animateTo(dir === 1 ? -w : w, () => {
                  location.href = target;
                });
              } else {
                animateTo(0, () => {
                  app.style.transform = "";
                  resetStage();
                });
              }
            },
            { passive: true }
          );

          window.addEventListener(
            "touchcancel",
            () => {
              if (!dragging) return;
              dragging = false;
              if (locked) {
                animateTo(0, () => {
                  app.style.transform = "";
                  resetStage();
                });
              }
            },
            { passive: true }
          );
        } catch (_e) {}
      })();
    </script>
  </body>
</html>
