---
import "../styles/global.css";

const { title = "3DSL" } = Astro.props;
const pathname = Astro.url?.pathname ?? "/";
const nav = [
  { href: "/", label: "Home" },
  { href: "/viewer", label: "Viewer" },
  { href: "/library", label: "Library" },
  { href: "/docs", label: "Docs" },
];
function isActive(href) {
  return href === "/" ? pathname === "/" : pathname.startsWith(href);
}
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-neutral-950 text-neutral-100">
    <header class="sticky top-0 z-50 border-b border-white/10 bg-neutral-950/70 backdrop-blur">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3">
        <a href="/" class="font-semibold tracking-wide">3DSL</a>
        <nav class="flex gap-3 text-sm">
          {nav.map((i) => (
            <a
              href={i.href}
              class={
                "rounded-full px-3 py-1 transition " +
                (isActive(i.href) ? "bg-white/15" : "hover:bg-white/10")
              }
            >
              {i.label}
            </a>
          ))}
        </nav>
      </div>
    </header>

    <main class="mx-auto w-full max-w-6xl px-4 py-10">
      <slot />
    </main>

    <footer class="border-t border-white/10">
      <div class="mx-auto max-w-6xl px-4 py-6 text-xs text-neutral-400">
        <div>3DSL / 3DSS</div>
      </div>
    </footer>
  </body>
</html>
