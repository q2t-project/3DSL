---
import "../styles/global.css";

const {
  title = "3DSL",
  description = "3DSL は、概念や関係を三次元の座標に配置し、拡大縮小しながら局面と総体を行き来できる表現基盤です。",
} = Astro.props;
const pathname = Astro.url?.pathname ?? "/";

// AdSense
// - このレイアウト配下は「サイト側」(Home/Library/Concept/Contact)。
// - Library は軽量維持のため広告なし（方針を変えるなら enableAdsense の条件だけ変える）
const ADSENSE_CLIENT = "ca-pub-3327629809463247";
const enableAdsense = !pathname.startsWith("/library");

const nav = [
  { href: "/", label: "Home" },
  { href: "/library", label: "Library" },
  { href: "/concept", label: "Concept" },
  { href: "/contact", label: "Contact" },
];
function isActive(href) {
  return href === "/" ? pathname === "/" : pathname.startsWith(href);
}
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    {enableAdsense && (
      <meta name="google-adsense-account" content={ADSENSE_CLIENT} />
    )}

    {enableAdsense && (
      <script
        async
        src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${ADSENSE_CLIENT}`}
        crossorigin="anonymous"
      ></script>
    )}

    <!-- Fonts: readable, business-like UI (JP + Latin) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Noto+Sans+JP:wght@300;400;500&display=swap"
    />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
  </head>

  <body class="min-h-screen text-neutral-100 antialiased app-shell">
    <header class="sticky top-0 z-50 border-b border-white/10 bg-neutral-950/60 backdrop-blur">
      <div class="mx-auto max-w-6xl px-4 py-3">
        {/* Mobile top bar (hamburger + centered logo) */}
        <div class="flex items-center justify-between gap-3 md:hidden">
          <details class="relative">
            <summary
              class="list-none rounded-md border border-white/15 bg-white/5 p-2 hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-cyan-300/30"
              aria-label="メニュー"
            >
              {/* hamburger */}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </summary>

            <nav class="absolute left-0 mt-2 w-52 overflow-hidden rounded-xl border border-white/10 bg-neutral-950/90 shadow-lg">
              {nav.map((i) => (
                <a
                  href={i.href}
                  class={
                    "block px-4 py-3 text-sm hover:bg-white/10 " +
                    (isActive(i.href) ? "bg-cyan-300/10 text-cyan-100" : "")
                  }
                >
                  {i.label}
                </a>
              ))}
            </nav>
          </details>

          <a href="/" class="flex items-center justify-center" aria-label="3DSL Home">
            <img src="/assets/logo/3DSL.svg" alt="3DSL" class="h-6 w-auto brightness-200 drop-shadow-sm" />
          </a>

          {/* Right side: policy/info (placeholder for future use) */}
          <a
            href="/policy"
            class="h-8 w-8 rounded-full border border-white/15 bg-white/5 grid place-items-center hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-cyan-300/30"
            aria-label="ポリシー"
          >
            {/* info: circle is the button itself (avoid "circle-in-circle") */}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M12 17v-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M12 8h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </a>
        </div>

        {/* Desktop header */}
        <div class="hidden md:flex items-center justify-between">
          <a href="/" class="flex items-center" aria-label="3DSL Home"><img src="/assets/logo/3DSL.svg" alt="3DSL" class="h-6 w-auto brightness-200 drop-shadow-sm" /></a>
          <nav class="flex gap-3 text-sm">
            {nav.map((i) => (
              <a
                href={i.href}
                class={
                  "rounded-full px-3 py-1 transition border border-transparent " +
                  (isActive(i.href)
                    ? "bg-cyan-300/10 text-cyan-100 border-cyan-300/20"
                    : "text-neutral-200 hover:bg-white/10 hover:border-white/10")
                }
              >
                {i.label}
              </a>
            ))}
          </nav>
        </div>
      </div>
    </header>

    <main class="mx-auto w-full max-w-6xl px-4 py-10">
      <slot />
    </main>

    <footer class="border-t border-white/10 bg-neutral-950/40">
      <div class="mx-auto max-w-6xl px-4 py-8 text-xs text-neutral-400">
        <div class="flex flex-wrap items-center justify-between gap-3">
          <div>3DSL / 3DSS</div>
          <div class="flex flex-wrap gap-4">
            <a class="hover:text-neutral-200" href="/policy">Policy</a>
            <a class="hover:text-neutral-200" href="/contact">Contact</a>
            <a class="hover:text-neutral-200" href="/docs">Docs</a>
            <a class="hover:text-neutral-200" href="/library">Library</a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Mobile: horizontal swipe to navigate main pages (Home/Library/Concept/Contact) -->
    <script is:inline>
      (() => {
        try {
          const ROUTES = ["/", "/library", "/concept", "/contact"];
          const path = location.pathname || "/";
          const matchIndex = () => {
            for (let i = 0; i < ROUTES.length; i++) {
              const r = ROUTES[i];
              if (r === "/" ? path === "/" : path.startsWith(r)) return i;
            }
            return -1;
          };
          let startX = 0, startY = 0, t0 = 0, active = false;
          const THRESH_X = 70;   // px
          const THRESH_Y = 55;   // px
          const MAX_DT = 700;    // ms

          const isInteractive = (el) => {
            if (!el) return false;
            const tag = (el.tagName || "").toLowerCase();
            if (tag === "input" || tag === "textarea" || tag === "select" || tag === "button") return true;
            if (el.isContentEditable) return true;
            return !!el.closest?.("[data-swipe-ignore]");
          };

          window.addEventListener(
            "touchstart",
            (e) => {
              if (!e || e.touches.length !== 1) return;
              if (isInteractive(e.target)) return;
              const idx = matchIndex();
              if (idx < 0) return;
              const t = e.touches[0];
              startX = t.clientX;
              startY = t.clientY;
              t0 = Date.now();
              active = true;
            },
            { passive: true }
          );

          window.addEventListener(
            "touchend",
            (e) => {
              if (!active) return;
              active = false;
              const dt = Date.now() - t0;
              if (dt > MAX_DT) return;
              const c = e.changedTouches && e.changedTouches[0];
              if (!c) return;
              const dx = c.clientX - startX;
              const dy = c.clientY - startY;
              if (Math.abs(dy) > THRESH_Y) return;
              if (Math.abs(dx) < THRESH_X) return;

              const idx = matchIndex();
              if (idx < 0) return;
              const dir = dx < 0 ? 1 : -1; // left swipe => next
              const next = idx + dir;
              if (next < 0 || next >= ROUTES.length) return;
              location.href = ROUTES[next];
            },
            { passive: true }
          );
        } catch (_e) {}
      })();
    </script>
  </body>
</html>
